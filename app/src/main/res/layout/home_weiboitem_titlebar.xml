<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    >
   <include layout="@layout/main_head_img"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/titlebar_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海角"
            android:textSize="12sp"
            android:textColor="@color/home_weiboitem_title_profile_name"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/titlebar_profile_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16分钟前  "
                android:textColor="@color/home_weiboitem_title_profile_time"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/titlebar_weiboComFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来自 微博weibo.com"
                android:textColor="@color/home_weiboitem_title_weibocomefrom"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/titlebar_arrow"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:scaleType="fitStart"
        android:src="@drawable/timeline_icon_more"/>
</LinearLayout>
